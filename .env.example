# Progressive Features Configuration
# Add these to your .env.local file

# Authentication
# JWT Secret for token signing (REQUIRED for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random

# Skip authentication in development (useful for admin interface)
SKIP_AUTH=true

# Revalidation Secret (for on-demand revalidation API)
REVALIDATE_SECRET=your-secure-revalidation-secret-here

# Webhook Secret (for automatic revalidation webhooks)
WEBHOOK_SECRET=your-secure-webhook-secret-here

# Force real database in development (optional)
# NEXT_PUBLIC_FORCE_REAL_DB=true

# Mock mode control (optional)
# NEXT_PUBLIC_MOCK_MODE=false

# Your base URL (important for ISR to work correctly)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
